package PrPixelCuda
version v1r1

# structure
branches PrPixelCuda cmt src

# dependencies
use GaudiPolicy          *
use CUDA                 *
use GpuHandler           * GpuManager

# main constituent
document cuda_library PrPixelCuda \
  Kernel.cu                       \
  KernelInvoker.cu                \
  Tools.cu                        \
  GpuPixelSearchByTriplet.cpp     \
  PrPixelCudaHandler.cpp

include_dirs ../PrPixelCuda
apply_pattern install_more_includes more=PrPixelCuda

# this should be done by the CUDA package
macro_remove use_linkopts "$(PrPixelCuda_linkopts)"
macro_append use_linkopts " $(PrPixelCuda_use_linkopts)"

# the server uses Gaudi components to load handlers
# declare the constituent as a component library
apply_pattern component_library library=PrPixelCuda
