package PrPixelCuda
version v1r1

# structure
branches PrPixelCuda cmt src

# dependencies
use GaudiPolicy          *
use CUDA                 *
use GpuHandler           * GpuManager
use PrPixelSerialization * Pr

# main constituent
document cuda_library PrPixelCuda \
  main.cpp                        \
  kernel.cu                       \
  kernelInvoker.cu                \
  PrPixelCudaHandler.cpp          \
  Tools.cpp

include_dirs ../PrPixelCuda
apply_pattern install_more_includes more=PrPixelCuda

# temporary option for link testing
macro_prepend PrPixelCuda_linkopts "-Wl,--no-as-needed "

# declare the constituent as a linker library
apply_pattern linker_library library=PrPixelCuda

# register the GPU handler
apply_pattern gpu_handler                   \
  type=PrPixelCudaHandler                   \
  name=tripletSearchGPU                     \
  include=PrPixelCuda/PrPixelCudaHandler.h
