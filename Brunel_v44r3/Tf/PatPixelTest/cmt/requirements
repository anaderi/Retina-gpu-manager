package PatPixelTest
version v1r0
author  "Alexey Badalov"

# structure, i.e. directories to process. 
branches cmt doc src

# dependencies
use VPDet       v* Det
use DigiEvent   v* Event
use TrackEvent  v* Event
use GaudiAlg    v*
use GaudiKernel v*
use GpuService  v* GpuManager
use Boost       v* LCG_Interfaces -no_auto_imports
use PatPixelSerialization v* Tf

include_path      none

# application constitutent
application PatPixelTest -import=Boost *.cpp

private
macro application_suffix ""

# set up the Boost unit test framework
macro_append use_cppflags " -g -DBOOST_TEST_DYN_LINK"

macro Boost_linkopts_unit_test_framework " -lboost_unit_test_framework-$(Boost_compiler_version)-mt-$(Boost_file_version) "
macro_append Boost_linkopts " $(Boost_linkopts_unit_test_framework)"
end_private
