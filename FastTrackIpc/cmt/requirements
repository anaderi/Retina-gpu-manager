package FastTrackIpc
version v1r1
author  "Alexey Badalov"

# structure
branches FastTrackIpc cmt doc src

# dependencies
use GaudiPolicy *
use Boost       * LCG_Interfaces -no_auto_imports
#use doxygen     * LCG_Interfaces -no_auto_imports

# exported includes
apply_pattern install_more_includes more=FastTrackIpc
private
include_dirs ../FastTrackIpc
end_private

# FastTrackIpc library constituent
library FastTrackIpc -no_static -import=Boost *.cpp api/*.cpp
apply_pattern linker_library library=FastTrackIpc

#action doxygen "$(doxygen_home)/doxygen doxyfile"
#macro FastTrackIpc_dependencies "doxygen"

private
macro_append Boost_linkopts " $(Boost_linkopts_thread) "
end_private
